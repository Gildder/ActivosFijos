                //estilo para login de usuario
                .loginUsuario
                    width 400px
                    
                    
                    //Formulario d inicio
                    .form 
                        width 100%
                        margin 0px
                        padding 0 10px
                        
                        p
                            font-size 14px
                            
                        .col-sm-12
                           .form-group
                                label
                                   font-size 14px
                 
        
             
            .perfil
                padding 10px  
                
                .userFoto      
                    width 30%
                    display inline-block
                    
                .datos
                    padding-top 15px
                    width 70%
                    float right

                    .subtitulo
                        width 200px
                        color naranja
                        font-weight bold
                  

