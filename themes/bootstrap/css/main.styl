//nib
@import 'nib/gradients'
@import 'nib/vendor'

vendor-prefixes = o moz webkit papitas official

azul = #22BCE0
naranja = #DD4F24
gris_claro = #ECE9E9
gris_texto = #7A7A7A
gris_oscuro = #444
verde_claro = #136C50
verde_oscuro = #013B21
amarrillo_oscuro = #F2A516




body
    background #e8e8e8
    border 0
    margin 0
    padding 0

    font-family Arial
    font-size 16px
    transition font-size 1s




header
    background verde_oscuro
    box-shadow 0 5px 0 rgba(0,0,0,0.2)
    color #fff
    padding 0.5em
    overflow hidden
    position relative
    display block
    z-index 3
    
    .logo
        border-right 1px solid naranja
        float left
        width 60px

        img
            border 0px dashed #bbb
            height 52px
            width 52px
            padding 0.2em 0.2em
         
    .titular
        margin 0 80px 0 70px
        

        .titulo
            font-size 28px
            font-weight normal
            text-shadow 0 5px 0 rgba(0,0,0,0.1) 
            margin 0
            position absolute
            top 22px
               
    .usuario
        position absolute
        right 5px
        top 5px
        display block

        .avatar
            margin 0 0.5em 0 0
            position relative
            z-index 69
            float right
            
            img
                border 0px dashed #bbb
                border-radius 50%
                width 45px
                
                
                
        .publicar
            background naranja
            border-radius 10px 0 0 30px;
            color white
            display block
            float right
            font-style italic
            margin 0
            padding 0 5px 0 10px
            position absolute
            text-decoration none
            text-shadow 1px 1px 0px black
            top 36px
            right 5px
            
            &:hover
                    z-index 90


footer
    background-color amarrillo_oscuro
    display block
    font-size 0.8em
    height 90px
    padding 10px
    position relative;
    text-align center
    width 100%
    z-index 0

    h3
        color #F3F5F3
        font-size 14px
        font-weigth normal
        text-shadow 0.5px 1px 0px gris_oscuro
        
        strong
            display block
            margin 5px
            font-size 1em
            
        span
            font-style italic
.navbar
    color white
    font-weight border
    
    
    &:hover
        transition green
        

//clase de boostrap usado en el nav
.navbar-fixed-top, .navbar-fixed-bottom
    position relative
    margin-bottom 0px
    left 0px
    
#menu
    //display none
    z-index 2
    
nav
    position relative
    display block
    box-shadow 0 5px 0 rgba(0,0,0,0.2)
    display none

    #titulobrand
        color white
        display block
        font-size 20px
        font-weight bold
        margin 0 0.5em
        padding 0.5em 0.2em
        text-decoration none
        text-shadow 0 1px 0 rgba(255, 255, 255, .1), 0 0 30px rgba(255, 255, 255, .125)
        transition all .2s linear
        
        
        &:hover
            text-decoration none
            font-weight bold
            color white
                
        img
            width 20px
            color white
            margin 0 5px
            
        small
                font-weight: bold;
        
    #menus
        font-size 20px
        left 0
        margin 0px
        overflow hidden
        position relative
        padding 0 10px  
        
 section
    background gris_claro
    border 1px solid black
    box-shadow 0 5px 0 rgba(0,0,0,0.1)
    display block
    margin 0 auto
    min-height 100%
    min-width 100%
    overflow hidden
    padding 10px
    position relative
    text-decoration none
    z-index 1
    

    .view
        border 1px solid rgba(0,0,0,0.5)
        padding 10px
        border-radius 8px
        margin 0 0 10px 0
        box-shadow 0 1px 0 rgba(0,0,0,0.9)
        
    #content
        height 100%
        
        
        h1
            font-size 28px
            font-weight normal
            text-shadow 0 1px 0 rgba(0,0,0,0.5)
        
        .login
            height 500px
            
                
            //estilo para login de usuario
            .loginUsuario
                background white
                border-radius 10px 10px 10px 10px;
                box-shadow 3px 3px 0px rgba(0,0,0,0.2)
                margin auto auto
                padding 10px 0 15px 0
                position relative
                
                h3
                    text-align center
                    font-weight bold
                    text-shadow 0px 2px 0px rgba(0,0,0,0.2)
                    padding-bottom 10px
                    border-bottom 1px solid naranja
                    box-shadow 0px 2px 0px rgba(0,0,0,0.2)
                    
                    
                //Formulario d inicio
                .form 
                    width 100%
                    margin 0px
                    
                   .col-sm-12
                       
                       .form-group
                            label
                               font-size 18px
                               padding-left 10px
                               
                            .checkbox
                                label
                                    color gris_oscuro
                        
                        
            
        
        .perfil
            padding 10px        
                
            .datos
                padding-top 15px
                
                .subtitulo
                    width 200px
                    color naranja
                    font-weight bold
                    

                  
                
@media (max-width: 768px) and (min-width: 518px) 
    section
